<section class="movie-detail-section">
    <div class="movie-detail">
        <!-- Movie detail head section -->
        <section class="movie-detail-head-wrapper">
            <div id="movie-detail-background" class="movie-detail-head_background">
                <div class="movie-detail-head">
                    <div class="movie-detail-post_trailer">
                        <div id="postImg" class="movie-detail-post_img">
                        </div>
                        <div id="movie-detail-trailer_icon">
                        </div>
                    </div>
                    <div class="movie-detail-basic-info-wrapper">
                        <div class="movie-detail-basic-info">
                            <section>
                                <h1 id="title"></h1>
                            </section>
                            <section class="mdbi-rating">
                                <div class="mdbi-rating_img">
                                    <img src="/public/assets/images/details/heart.png" alt="rating">
                                </div>
                                <div class="mdbi-rating_rate">
                                    <p id="rating"></p>
                                </div>
                            </section>
                            <section class="mdbi-format"> 
                                <p id="format"></p>
                            </section>
                            <section class="mdbi-attribute">
                                <a class='attribute' id="time"></a>
                                <a class="split">·</a>
                                <a class='attribute' id="genre"></a>
                            </section>
                            <section class="mdbi-releaseInfo">
                                <a class='attribute' id="language"></a>
                                <a class="split">·</a>
                                <a class='attribute' id="releaseDate"></a>
                            </section>
                            <section class="mdbi-book">
                                <div class="mdbi-book_button">
                                    <button id="book">
                                        <span>
                                            Book tickets
                                        </span>
                                    </button>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Movie detail head section end -->

        <!-- Movie detail information section-->
        <section class="movie-detail-info-wrapper">
            <div class="movie-detail-info">
                <section class="movie-detail-info_about-wrapper">
                    <div class="movie-detail-info_header">
                        <h2>About the Movie</h2>
                    </div>
                    <div class="movie-detail-info_about">
                        <p id="info"></p>
                    </div>
                </section>
                <section class="movie-detail-info_cast-wrapper">
                    <div class="movie-detail-info_header">
                        <h2>Cast</h2>
                    </div>
                    <div class="movie-detail-info_cast">
                        <div class="cast-detail">
                            <ul id="movie-detail-cast" class="movie-detail-info_cast_list">
                    
                            </ul>
                        </div>
                        <div class="cast-left-triangle">
                            <img src="/public/assets/images/details/arrow_left.png" id="cast_arrow_left" class="arrow" alt="Cast Left">
                        </div>
                        <div class="cast-right-triangle">
                            <img src="/public/assets/images/details/arrow_right.png" id="cast_arrow_right" class="arrow" alt="Cast Right">
                        </div>
                    </div>
                </section>
                <section class="movie-detail-info_reviews-wrapper">
                    <div class="movie-detail-info_header">
                        <h2>Reviews</h2>
                    </div>
                    <div class="movie-detail-info_reviews">
                        <div class="review-detail">
                            <ul id="movie-detail-reviews" class="movie-detail-info_review_list"> 
                            </ul>
                        </div>
                        <div class="review-left-triangle">
                            <img src="/public/assets/images/details/arrow_left.png" id="review_arrow_left" class="arrow" alt="User Left">
                        </div>
                        <div class="review-right-triangle">
                            <img src="/public/assets/images/details/arrow_right.png" id="review_arrow_right" class="arrow" alt="User Right">
                        </div>
                    </div>
                </section>
            </div>
        </section>
        <!--Movie detail information end section-->
    </div>
</section>
{{#section "styles"}}
    <script type="text/javascript">
        const movieId = '{{id}}';
    </script>
<link rel="stylesheet" href="/public/assets/css/details/movieDetails.css">
{{/section}}

