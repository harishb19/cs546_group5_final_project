{{#section "styles"}}
    <link rel="stylesheet" href="/public/assets/css/movieList/movieList.css">
{{/section}}
<br/>
<div class="container">
    <div class="row">
        <div class="col-2" style="margin-top: 15px;">
            <span class="filter-title">Filters</span>
            <div class="sec1">
                <div>
                    <button class="btn" type="button" data-toggle="collapse" data-target="#collapseExample1"
                            aria-expanded="false" aria-controls="collapseExample">
                        Languages
                    </button>
                    <div class="collapse" id="collapseExample1">
                        <div>
                            <div class="checkbox">
                                <label><input class="checkboxinput" type="checkbox" value="" class="cb">English</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Hindi</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">French</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Japanese</label>
                            </div>
                        </div>
                    </div>
                    <button class="btn" type="button" data-toggle="collapse" data-target="#collapseExample2"
                            aria-expanded="false" aria-controls="collapseExample">
                        Genres
                    </button>
                    <div class="collapse" id="collapseExample2">
                        <div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Action</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Animation</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Comedy</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Crime</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Drama</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Horror</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Romance</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Sci-fi</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">Thriller</label>
                            </div>
                        </div>
                    </div>
                    <button class="btn" type="button" data-toggle="collapse" data-target="#collapseExample3"
                            aria-expanded="false" aria-controls="collapseExample">
                        Format
                    </button>
                    <div class="collapse" id="collapseExample3">
                        <div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">2D</label>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" value="" class="cb">3D</label>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="sec2" id="products">
                <div class="container">
                    <div class="row mt-3">
                       {{#each movies as |movie|}}
                            {{> moviecard movie=(parseJson movie )}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

