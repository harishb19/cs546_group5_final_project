{{#section "styles"}}
    <link rel="stylesheet" href="/public/assets/css/landing/landing.css">
{{/section}}
<!-- Banner -->
<section class="call-to-action-section">
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 img-fluid"
                         style="max-width: 100%; height:100%; object-fit:fill; width:100%; "
                         src="https://thumbor.forbes.com/thumbor/960x0/https%3A%2F%2Fspecials-images.forbesimg.com%2Fimageserve%2F61116cea2313e8bae55a536a%2F-Dune-%2F0x0.jpg%3Ffit%3Dscale"
                         alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                         src="https://visme.co/blog/wp-content/uploads/2017/12/Redesigned-Movie-Posters-to-Inspire-your-Creativity-Interstellar.png"
                         alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100"
                         src="https://www.indiewire.com/wp-content/uploads/2019/12/JokerPoster1200_5ca3c435318d42.29270548.jpg?w=800"
                         alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</section>

{{!-- Upcoming Movies --}}
<div class="container-fluid">
    <h4 class="mt-5">Upcoming Movies</h4>
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2 new-upcoming-css">
    {{#each upcomingMovies as |movie|}}
                {{> topcard movie=(parseJson movie )}}
            {{/each}}
    </div>
</div>


{{!-- Top Movies --}}
<div class="container-fluid">
    <h4 class="mt-5">Top Movies</h4>
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2 new-top-css">
        {{#each topMovies as |movie|}}
                {{> topcard movie=(parseJson movie )}}
            {{/each}}
    </div>
</div>

<br/>

{{!-- Genres --}}
<div class="container-fluid">
    <h4 class="mt-5">Genres</h4>
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4 pt-2 new-genre-css">
        {{#each genreMovies as |genre|}}
                {{> genrecard genre=(parseJson genre )}}
            {{/each}}
    </div>
</div>
