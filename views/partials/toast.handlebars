{{#section "styles"}}
    <link rel="stylesheet" href="/public/assets/css/login.css">

{{/section}}
{{#if toastMessage}}

    {{#if (isEqual toastStatus 'success')}}

        <script type="module">
            const a = () => {
                Toastify({
                    text: " {{toastMessage}}",
                    duration: 30000,
                    close: true,
                    gravity: "top", // `top` or `bottom`
                    position: "right", // `left`, `center` or `right`
                    stopOnFocus: true, // Prevents dismissing of toast on hover
                    // style: {
                    //     background: "linear-gradient(to right, #00b09b, #96c93d)",
                    // },
                    className: "bg-success-alert",
                    onClick: function () {
                    } // Callback after click
                }).showToast();

            }

            a()

        </script>

    {{else}}
        {{toastStatus}}


        <script type="module">
            const a = () => {
                Toastify({
                    text: " {{toastMessage}}",
                    duration: 3000,
                    close: true,
                    gravity: "top", // `top` or `bottom`
                    position: "right", // `left`, `center` or `right`
                    stopOnFocus: true, // Prevents dismissing of toast on hover
                    // style: {
                    //     background: 'linear-gradient(to right, #00b09b, #96c93d)',
                    // },
                    className: "bg-danger-toast",
                    onClick: function () {
                    } // Callback after click
                }).showToast();

            }

            a()

        </script>
    {{/if}}

{{/if}}
